@model Libro
<form asp-controller="Biblioteca" asp-action="AltaDeLibro">
    <label>Titulo</label>
    <input type="text" id="titulo" name="titulo" class="form-control" required/>

    <label>Género</label>
    @Html.DropDownListFor(model => model.genero,
            new SelectList(Enum.GetValues(typeof(Genero))),
            "Selecciona un género",
            htmlAttributes: new { @class = "form-control", required = "required" })

    <label>Autor</label>
    <input type="text" id="autor" name="autor" class="form-control" required/>

    <label>Editorial</label>
    <input type="text" id="editorial" name="editorial" class="form-control" required/>

    <label>Año</label>
    <input type="number" id="año" name="año" class="form-control" required/>

    <br />
    <button type="submit" class="btn btn-success">Crear</button>
</form>