@model Libro

<h2>Editar Libro</h2>

<form asp-action="Editar" method="post">
    <div class="form-group">
        <label asp-for="ID">ID</label>
        <input asp-for="ID" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="titulo">Título</label>
        <input asp-for="titulo" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="genero">Género</label>
        @Html.DropDownListFor(model => model.genero,
                 new SelectList(Enum.GetValues(typeof(Genero))),
                 "Selecciona un género",
                 htmlAttributes: new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label asp-for="autor">Autor</label>
        <input asp-for="autor" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="año">Año</label>
        <input asp-for="año" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="editorial">Editorial</label>
        <input asp-for="editorial" class="form-control" required/>
    </div>
    </br>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
