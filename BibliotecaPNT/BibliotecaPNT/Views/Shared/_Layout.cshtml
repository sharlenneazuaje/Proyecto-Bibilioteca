<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BibliotecaPNT</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: "Roboto", sans-serif;
            background-color: #EEE4EC;
        }

        .titulo {
            color: #735D78;
            font-size: 2.5rem;
            font-weight: 500;
        }

        .color-navegacion {
            background-color: #CBBEC8 !important;
        }

        .botones-principales {
            background-color: #CBBEC8;
            color: black;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

            .botones-principales:hover {
                background-color: white;
                color: black;
                border: 2px solid #CBBEC8;
            }

        .contenedor {
            text-align: center;
            height: 65px;
            line-height: 65px;
        }

        /* Estilos para el formulario de búsqueda */
        #searchForm {
            display: none; /* Inicialmente oculto */
            margin-bottom: 20px; /* Espacio inferior */
            padding: 20px; /* Espacio interior */
        }

            #searchForm .form-group {
                margin-bottom: 10px; /* Espacio entre grupos de formulario */
            }

            #searchForm label {
                font-weight: bold; /* Negrita para etiquetas */
            }

            #searchForm button[type="submit"] {
                background-color: #CBBEC8; /* Color de fondo */
                color: white; /* Color de texto */
                border: none; /* Sin borde */
                padding: 10px 20px; /* Espaciado */
                cursor: pointer; /* Cursor al pasar */
            }

        /* Estilos para la tabla */
        table {
            width: 100%;
            border-collapse: collapse; /* Colapso de bordes */
        }

            table th, table td {
                padding: 8px; /* Espaciado interior */
                text-align: left; /* Alineación de texto a la izquierda */
                border: 1px solid #CBBEC8; /* Borde delgado */
            }

            table th {
                background-color: #CBBEC8; /* Color de fondo para encabezados */
            }

            table td {
                vertical-align: middle; /* Alineación vertical centrada */
            }

                /* Estilos para las acciones */
                table td a {
                    margin-right: 5px; /* Margen entre iconos */
                    color: #CBBEC8; /* Color de enlace */
                    text-decoration: none; /* Sin subrayado */
                }

        /* Estilos para la paginación */
        .pagination {
            justify-content: center; /* Centrado horizontal de la paginación */
        }

            .pagination .page-item.active .page-link {
                background-color: var(--bs-pagination-color); /* Fondo activo */
                border-color: #CBBEC8; /* Borde activo */
            }

        /Estilos para el alta de un libro/
        form {
            max-width: 600px; /* Ancho máximo del formulario */
            margin: auto; /* Centra el formulario horizontalmente */
            padding: 20px; /* Espaciado interior */
            background-color: white; /* Color de fondo */
            border: 1px solid #CBBEC8; /* Borde del formulario */
            border-radius: 5px; /* Bordes redondeados */
            box-shadow: 0 0 10px rgba(0,0,0,0.1); /* Sombra ligera */
        }

        /* Estilos para etiquetas y campos de entrada */
        label {
            font-weight: bold; /* Negrita para etiquetas */
            margin-bottom: 5px; /* Espaciado inferior */
        }

        .form-control {
            width: 100%; /* Ancho completo del campo de entrada */
            padding: 8px; /* Espaciado interior */
            margin-bottom: 10px; /* Espaciado inferior */
            border: 1px solid #CBBEC8; /* Borde del campo de entrada */
            border-radius: 4px; /* Bordes redondeados */
            box-sizing: border-box; /* Incluir el padding y border en el width */
        }

        /* Estilos para el botón de enviar */
        .btn-success {
            background-color: #CBBEC8; /* Color de fondo verde */
            color: #fff; /* Color de texto blanco */
            border: none; /* Sin borde */
            padding: 10px 20px; /* Espaciado interior */
            font-size: 16px; /* Tamaño de fuente */
            cursor: pointer; /* Cambia el cursor al pasar */
            border-radius: 4px; /* Bordes redondeados */
        }

            .btn-success:hover {
                background-color: white; /* Color de fondo más oscuro al pasar */
                border: 1px solid #CBBEC8;
                color: black;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 color-navegacion" style="color: ##735D78">
            <div class="container">
                <a class="navbar-brand" style="color:black" asp-area="" asp-controller="Home" asp-action="Index">BibliotecaPNT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BibliotecaPNT
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>